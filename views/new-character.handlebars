<div class="card col-4 offset-4" style="width: 18rem;">
  <div class="card-body">
    {{!-- upload label and button --}}
    <div>
      <button id="upload_widget" class="btn btn-dark mx-auto">Upload Image</button>
    </div>
    <div><img id="uploadedimage" class="mx-auto" /></div>

  </div>
</div>

{{!-- dropdown menu for alignment --}}
<div class="input-group">
  <label for="alignments" class="input-group-text">Alignment:</label>

  <select name="alignments" id="alignments">
    <option value="Lawful Good">Lawful Good</option>
    <option value="Lawful Neutral">Lawful Neutral</option>
    <option value="Lawful Evil">Lawful Evil</option>
    <option value="Neutral Good">Neutral Good</option>
    <option value="True Neutral">True Neutral</option>
    <option value="Neutral Evil">Neutral Evil</option>
    <option value="Chaotic Good">Chaotic Good</option>
    <option value="Chaotic Neutral">Chaotic Neutral</option>
    <option value="Chaotic Evil">Chaotic Evil</option>
  </select>
</div>

<div class="input-group">
  <label for="character-name" class="input-group-text">Character Name: </label>
  <textarea for="character-name" class="form-control" id="characterName"
    placeholder="Add your character's name(s)."></textarea>
</div>


<div class="input-group">
  <span class="input-group-text">Physical Description</span>
  <textarea class="form-control" aria-label="physical_description" id="physical_description"
    placeholder="Add in a description of the character's physical appearance and traits."></textarea>
</div>

<div class="input-group">
  <div class="input-group-prepend">
    <span class="input-group-text">Backstory</span>
  </div>
  <textarea class="form-control" aria-label="backstory" id="backstory"
    placeholder="Add in details about the character's backstory."></textarea>
</div>

<div class="input-group">
  <div class="input-group-prepend">
    <span class="input-group-text">Personality</span>
  </div>
  <textarea class="form-control" aria-label="personality" id="personality"
    placeholder="Add in details about the character's personality."></textarea>
</div>

<div class="input-group">
  <div class="input-group-prepend">
    <span class="input-group-text">Abilities</span>
  </div>
  <textarea class="form-control" aria-label="abilities" id="abilities"
    placeholder="List all notable abilities your character has."></textarea>
</div>

<button type="button" class="btn btn-dark btn-lg btn-block" id="save-character">Save Character</button>


<script src="https://widget.cloudinary.com/v2.0/global/all.js" type="text/javascript"></script>

<script src="./js/upload_event.js" type="text/javascript"></script>